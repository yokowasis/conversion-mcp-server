{
  "name": "conversion-mcp-server",
  "version": "1.1.0",
  "description": "MCP Server for converting HTML/Markdown to PDF and other formats using Puppeteer and Marked",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "conversion-mcp-server": "./bin/cli.js"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/http-server.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "watch": "tsx watch src/index.ts",
    "watch:http": "tsx watch src/http-server.ts",
    "test": "node test/run-tests.js",
    "test:build": "npm run build && npm run test",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "prod": "npm run build && npm start",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.0",
    "html-docx-js": "^0.3.1",
    "marked": "^16.2.1",
    "puppeteer": "^24.19.0",
    "sanitize-html": "^2.17.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/html-docx-js": "^0.3.4",
    "@types/node": "^20.0.0",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pdf-converter",
    "html-to-pdf",
    "markdown-to-pdf",
    "markdown-to-html",
    "puppeteer",
    "marked",
    "document-conversion",
    "typescript",
    "claude",
    "cli"
  ],
  "author": "yokowasis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yokowasis/conversion-mcp-server.git"
  },
  "homepage": "https://github.com/yokowasis/conversion-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
